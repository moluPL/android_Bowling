<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            style="?backgroundTheme" 
            >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/create_league_nameTxtV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_lg_name"
        style="?textBody"
        android:paddingLeft="10dp" 
        />

    <EditText
        android:id="@+id/create_league_text_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
         />

    <TextView
        android:id="@+id/create_league_homeTxtV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_lg_Home"
        style="?textBody"
        android:paddingLeft="10dp"
        />

    <EditText
        android:id="@+id/create_league_text_home"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName" 
        android:paddingLeft="10dp"
        />
    
	<Button
	    android:id="@+id/create_league_btn_select_pattern"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    style="?buttonText"
	    android:text="@string/choose_pattern_txt" />

    <TextView
        android:id="@+id/create_league_patternTxt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_patR"
        style="?textBody"
        android:paddingLeft="10dp"
        />
    <TextView
        android:id="@+id/create_league_patternselectTXT"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="?textBody"
        android:paddingLeft="10dp"
        />
    
    <Button
        android:id="@+id/create_league_btn_select_pattern2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="?buttonText"
        android:text="@string/choose_pattern_txt" />

    <TextView
        android:id="@+id/create_league_patternTxt2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_patL"
        style="?textBody"
        android:paddingLeft="10dp"
        />
    <TextView
        android:id="@+id/create_league_patternselectTXT2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="?textBody"
        android:paddingLeft="10dp"
        />

    <CheckBox
        android:id="@+id/create_league_checkSame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkBoxPatternsSame" />

    <CheckBox
        android:id="@+id/create_league_checkBoxUnknow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/checkUnknown" />
    
    <TableLayout
        android:id="@+id/table_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"  
   		android:stretchColumns="*"
        >
        <TableRow 
            android:id="@+id/table_button_row"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        >

        	<Button
        	    android:id="@+id/create_league_button_save"
        	   
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    style="?buttonText"
        	    android:text="@string/btn_save" />

        	<Button
        	    android:id="@+id/create_league_button_cancel"
        	   
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    style="?buttonText"
        	    android:text="@string/btn_cancel" />

    	</TableRow>
    		
    
    </TableLayout>

</LinearLayout>
</ScrollView>