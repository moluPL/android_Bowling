<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/vertical_scroll_view22"
     android:layout_width="fill_parent" 
     android:layout_height="match_parent"
     style="?backgroundTheme"
     android:scrollbars="vertical">
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:showDividers="beginning|middle|end" >
                  
                    <Button
                        android:id="@+id/training_button"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        style="?buttonText"
                        android:padding="10dp"
                        android:text="@string/training" />

					<TextView
					    android:id="@+id/textLiga"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:gravity="center"
					    android:text="@string/select_lg"
					    android:textSize="20sp"
					    android:textStyle="italic"
					    android:typeface="normal" />

                    <Spinner
                        android:id="@+id/spinner_league"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dip"
                        android:layout_marginRight="8dip"
                        android:layout_marginTop="20dip"
                        
                        android:prompt="@string/spinner_league" />

                    <Button
                        android:id="@+id/play_league"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?buttonText"
                        android:text="@string/spinner_league" />

                  <Button
                      android:id="@+id/btn_league_create"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="?buttonText"
                      android:gravity="center"
                      android:padding="10dp"
                      android:text="@string/league_choose" />

                  <TextView
                      android:id="@+id/TextView01"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="@string/select_tour"
                      android:textSize="20sp"
                      android:textStyle="italic"
                      android:typeface="normal" />

                  <Spinner
                      android:id="@+id/spinner_tour"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dip"
                      android:layout_marginRight="8dip"
                      android:layout_marginTop="20dip"
                      android:prompt="@string/spinner_league" />

                  <Button
                      android:id="@+id/play_tournamnet"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="?buttonText"
                      android:text="@string/play_tournament" />

                  <Button
                      android:id="@+id/btn_create_tour"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      style="?buttonText"
                      android:padding="10dp"
                      android:text="@string/tournament" />

                  <Button
                      android:id="@+id/one_player_list_back_btn"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="?buttonText"
                      android:text="@string/back" />
                 
              </LinearLayout>
	   		</ScrollView>

	   	
	  