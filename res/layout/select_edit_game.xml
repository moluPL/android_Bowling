<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
<!-- The main content view -->
    
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />
    
<!-- The navigation drawer -->

    <LinearLayout
        android:id="@+id/drawer_LeftMenu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        style="?backgroundTheme">
        <Button
                        android:id="@+id/Drawer_play_all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?buttonText"
                        android:text="@string/Edit_match_showAll"
                        android:layout_marginTop="10dip" 
                         />
        <Button
                        android:id="@+id/Drawer_play_train"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?buttonText"
                        android:text="@string/Edit_match_showTraining" 
                        android:layout_marginTop="10dip" 
                         />
         <TextView
					    android:id="@+id/Drawer_textLiga"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:gravity="center"
					    android:text="@string/select_lg"
					    android:textSize="20sp"
					    android:textStyle="italic"
					    android:typeface="normal" 
					    android:layout_marginTop="10dip" />

                    <Spinner
                        android:id="@+id/Drawer_spinner_league"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dip"
                        android:layout_marginRight="8dip"
                        android:layout_marginTop="10dip"
                        android:prompt="@string/spinner_league" 
                        />

                    <Button
                        android:id="@+id/Drawer_play_league"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?buttonText"
                        android:text="@string/Edit_match_showLg" 
                        android:layout_marginTop="10dip" />

                 

                  <TextView
                      android:id="@+id/Drawer_TextView01"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="@string/select_tour"
                      android:textSize="20sp"
                      android:textStyle="italic"
                      android:typeface="normal" 
                      android:layout_marginTop="10dip" />

                  <Spinner
                      android:id="@+id/Drawer_spinner_tour"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dip"
                      android:layout_marginRight="8dip"
                      android:layout_marginTop="10dip"
                      android:prompt="@string/spinner_league" 
                      />

                  <Button
                      android:id="@+id/Drawer_play_tournamnet"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="?buttonText"
                      android:text="@string/Edit_match_showTour" 
                      android:layout_marginTop="10dip" />
        </LinearLayout>
        
<!-- The Right content view -->
		<LinearLayout 
		    android:id="@+id/drawer_RightMenu"
        	android:layout_width="fill_parent"
        	android:layout_height="match_parent"
        	android:layout_gravity="end"
        	android:orientation="vertical"
        	style="?backgroundTheme"
        	>
		</LinearLayout>


</android.support.v4.widget.DrawerLayout>